<UserControl x:Class="Otor.MsixHero.App.Modules.Dialogs.Settings.View.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             mvvm:ViewModelLocator.AutoWireViewModel="True"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mvvm="http://prismlibrary.com/"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             xmlns:configuration="clr-namespace:Otor.MsixHero.Infrastructure.Configuration;assembly=Otor.MsixHero.Infrastructure"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:view="clr-namespace:Otor.MsixHero.App.Modules.Dialogs.Settings.View"
             xmlns:validation="clr-namespace:Otor.MsixHero.App.Helpers.Validation"
             xmlns:localization="clr-namespace:Otor.MsixHero.App.Localization"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:Otor.MsixHero.App.Modules.Dialogs.Settings.ViewModel"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModel:SettingsViewModel}">
    <mvvm:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="SizeToContent" Value="Manual" />
            <Setter Property="Width" Value="800" />
            <Setter Property="Title" Value="{localization:Loc Dialogs_Settings_Title}" />
            <Setter Property="Height" Value="700" />
            <Setter Property="MinWidth" Value="350" />
            <Setter Property="MinHeight" Value="350" />
        </Style>
    </mvvm:Dialog.WindowStyle>

    <UserControl.CommandBindings>
        <CommandBinding Command="Save" CanExecute="CanSave" Executed="SaveExecuted" />
        <CommandBinding Command="Close" Executed="CloseExecuted" />
    </UserControl.CommandBindings>

    <DockPanel>
        <Border Visibility="Collapsed" Background="Transparent" TextBlock.Foreground="Black" DockPanel.Dock="Top">
            <DockPanel>
                <Border 
                    Width="42"
                    Height="42"
                    Background="{StaticResource MsixHero.Brushes.Accent}">
                    <Path 
                        Width="32" 
                        Height="32" 
                        Margin="0 -0" 
                        Fill="White" 
                        Data="{StaticResource VectorGear}">
                        <Path.LayoutTransform>
                            <ScaleTransform ScaleX="0.75" ScaleY="0.75" />
                        </Path.LayoutTransform>
                    </Path>
                </Border>

                <Grid>
                    <TextBlock 
                        Margin="8 0 0 0" 
                        Foreground="White"
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left" 
                        Text="{localization:Loc Dialogs_Settings_TitleUpper}">
                        <TextBlock.Effect>
                            <BlurEffect
                                Radius="8.0"
                                KernelType="Box"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock 
                        Margin="8 0 0 0" 
                        Foreground="White"
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left" 
                        Text="{localization:Loc Dialogs_Settings_TitleUpper}">
                        <TextBlock.Effect>
                            <BlurEffect
                                Radius="2.0"
                                KernelType="Box"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock 
                        Margin="8 0 0 0" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left" 
                        Text="{localization:Loc Dialogs_Settings_TitleUpper}" />
                </Grid>
            </DockPanel>
        </Border>

        <Border
            BorderThickness="0 1 0 0"
            BorderBrush="#E3E3E3"
            TextBlock.Foreground="{StaticResource MsixHero.Dialog.Bar.Foreground}"
            Background="{StaticResource MsixHero.Dialog.Bar.Background}" 
            DockPanel.Dock="Bottom">
            <StackPanel Orientation="Horizontal" Margin="7.5" HorizontalAlignment="Right" DockPanel.Dock="Bottom">
                <Button Height="30" Padding="8 4" Margin="7.5" Command="Save" Content="{localization:Loc Dialogs_OK}">
                    <Button.CommandParameter>
                        <system:Boolean>True</system:Boolean>
                    </Button.CommandParameter>
                </Button>
                <Button Height="30" Padding="8 4" Margin="7.5" Command="Save" Content="{localization:Loc Dialogs_Apply}" />
                <Button Height="30" Padding="8 4" Margin="7.5" Command="Close" Content="{localization:Loc Dialogs_Close}" />
            </StackPanel>
        </Border>

        <Border Visibility="{Binding AllSettings.IsValid, Converter={StaticResource NegativeBooleanToVisibilityConverter}}" 
            Background="{StaticResource MsixHero.Brushes.Validation}" Padding="8" DockPanel.Dock="Bottom">
            <DockPanel>
                <Border
                    DockPanel.Dock="Left"
                    VerticalAlignment="Center"
                    Margin="0 0 8 0"
                    CornerRadius="14" Width="14" Height="14" Background="IndianRed" HorizontalAlignment="Right">
                    <TextBlock Text="!" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="10" LineHeight="10" LineStackingStrategy="BlockLineHeight" FontWeight="Bold" Foreground="White" />
                </Border>

                <TextBlock Text="{Binding AllSettings.ValidationMessage}" VerticalAlignment="Center" />
            </DockPanel>

        </Border>

        <Border Background="#FBFBFB">
            <TabControl SelectedIndex="0" Margin="16 0 16 16" x:Name="MainContent" view:SearchHelper.SearchString="test">
                <TabItem Header="{localization:Loc Dialogs_Settings_Interface}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel>
                            <Label Style="{StaticResource FormLabel}" Content="{localization:Loc Dialogs_Settings_Language}" />
                            <ComboBox
                                ItemsSource="{Binding AllLanguages}"
                                SelectedValue="{Binding Language.CurrentValue}" 
                                SelectedValuePath="LanguageCode" 
                                DisplayMemberPath="DisplayName" />

                            <Label Margin="0 20 0 6" Style="{StaticResource FormLabel}" Content="{localization:Loc Dialogs_Settings_Visuals}" />

                            <TextBlock Style="{StaticResource DataHeader}" Text="{localization:Loc Dialogs_Settings_Visuals_Hint}" Margin="0  0 0 6" />

                            <Grid Margin="0 0 0 -4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="32" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Slider
                                    Interval="1"
                                    TickFrequency="1"
                                    TickPlacement="BottomRight"
                                    IsSnapToTickEnabled="True"
                                    Value="{Binding UxLevel.CurrentValue}"
                                    Margin="0 16"
                                    Width="24"
                                    HorizontalAlignment="Left"
                                    IsDirectionReversed="True"
                                    Grid.Column="0"
                                    Grid.Row="0"
                                    Grid.RowSpan="4"
                                    Orientation="Vertical" 
                                    Height="150" Minimum="-1" Maximum="2" />

                                <StackPanel VerticalAlignment="Center" Grid.Column="1" Grid.Row="0">
                                    <TextBlock FontWeight="SemiBold" Text="{localization:Loc Dialogs_Settings_Visuals_Automatic}" />
                                    <TextBlock Text="{localization:Loc Dialogs_Settings_Visuals_Automatic_Hint}" Foreground="#888" />
                                </StackPanel>

                                <StackPanel VerticalAlignment="Center" Grid.Column="1" Grid.Row="1">
                                    <TextBlock FontWeight="SemiBold" Text="{localization:Loc Dialogs_Settings_Visuals_Performance}" />
                                    <TextBlock Text="{localization:Loc Dialogs_Settings_Visuals_Performance_Hint}" Foreground="#888" />
                                </StackPanel>


                                <StackPanel VerticalAlignment="Center" Grid.Column="1" Grid.Row="2">
                                    <TextBlock FontWeight="SemiBold" Text="{localization:Loc Dialogs_Settings_Visuals_Medium}" />
                                    <TextBlock Text="{localization:Loc Dialogs_Settings_Visuals_Medium_Hint}" Foreground="#888" />
                                </StackPanel>

                                <StackPanel VerticalAlignment="Center" Grid.Column="1" Grid.Row="3">
                                    <TextBlock FontWeight="SemiBold" Text="{localization:Loc Dialogs_Settings_Visuals_BestLook}" />
                                    <TextBlock Text="{localization:Loc Dialogs_Settings_Visuals_BestLook_Hint}" Foreground="#888" />
                                </StackPanel>
                            </Grid>

                            <Label Margin="0 20 0 6" Style="{StaticResource FormLabel}" Content="{localization:Loc Dialogs_Settings_StartUp}" />

                            <TextBlock Style="{StaticResource DataHeader}" Text="{localization:Loc Dialogs_Settings_InitialScreen}" Margin="0  0 0 6" />
                            <ComboBox 
                                SelectedValuePath="Tag"
                                SelectedValue="{Binding DefaultScreen.CurrentValue}">
                                <ComboBoxItem Tag="{x:Static configuration:DefaultScreen.Packages}" Content="{localization:Loc Dialogs_Settings_InitialScreen_Packages}" />
                                <ComboBoxItem Tag="{x:Static configuration:DefaultScreen.Containers}" Content="{localization:Loc Dialogs_Settings_InitialScreen_Containers}" />
                                <ComboBoxItem Tag="{x:Static configuration:DefaultScreen.Volumes}" Content="{localization:Loc Dialogs_Settings_InitialScreen_Volumes}" />
                                <ComboBoxItem Tag="{x:Static configuration:DefaultScreen.Events}" Content="{localization:Loc Dialogs_Settings_InitialScreen_EventViewer}" />
                                <ComboBoxItem Tag="{x:Static configuration:DefaultScreen.System}" Content="{localization:Loc Dialogs_Settings_InitialScreen_SystemState}" />
                                <ComboBoxItem Tag="{x:Static configuration:DefaultScreen.Tools}" Content="{localization:Loc Dialogs_Settings_InitialScreen_Tools}" />
                            </ComboBox>

                            <TextBlock Text="{localization:Loc Dialogs_Settings_ReleaseNotes}" Style="{StaticResource DataHeader}" Margin="0 16 0 6" />
                            <CheckBox IsChecked="{Binding ShowReleaseNotes.CurrentValue}" Content="{localization:Loc Dialogs_Settings_ReleaseNotes_Show}" />

                            <Label Style="{StaticResource FormLabel}" Margin="0 20 0 6" Content="{localization:Loc Dialogs_Settings_Prompts}" />

                            <CheckBox IsChecked="{Binding ConfirmDeletion.CurrentValue}" Content="{localization:Loc Dialogs_Settings_Prompts_ConfirmRemoving}" />
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="{localization:Loc Dialogs_Settings_Signing}" x:Name="TabSigning">
                    <ContentControl mvvm:RegionManager.RegionName="TabSigning" mvvm:RegionManager.RegionContext="{Binding Context}" />
                </TabItem>
                <TabItem Header="{localization:Loc Dialogs_Settings_Editors}">
                    <b:Interaction.Behaviors>
                        <validation:ValidationBehavior ValidatedChangeable="{Binding TabEditors}" />
                    </b:Interaction.Behaviors>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel>
                            <Label Style="{StaticResource FormLabel}" Content="{localization:Loc Dialogs_Settings_Editors_ManifestFiles}" />
                            <TextBlock Text="{localization:Loc Dialogs_Settings_Editors_ManifestFiles_Hint}" Style="{StaticResource DataHeader}" Margin="0 0 0 6" />

                            <StackPanel>
                                <RadioButton 
                                    GroupName="rt1"
                                    Margin="0 0 0 8"
                                    IsChecked="{Binding ManifestEditorType.CurrentValue, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static configuration:EditorType.Default}}" 
                                    Content="{localization:Loc Dialogs_Settings_Editors_DefaultXml}" />
                                <RadioButton 
                                    GroupName="rt2"
                                    Margin="0 0 0 8"
                                    IsChecked="{Binding ManifestEditorType.CurrentValue, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static configuration:EditorType.Ask}}" 
                                    Content="{localization:Loc Dialogs_Settings_Editors_Ask}" />
                                <RadioButton 
                                    GroupName="rt3"
                                    Margin="0 0 0 8"
                                    IsChecked="{Binding ManifestEditorType.CurrentValue, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static configuration:EditorType.Custom}}" 
                                    Content="{localization:Loc Dialogs_Settings_Editors_CustomApp}" />
                            </StackPanel>

                            <DockPanel Margin="22 0 0 8" Visibility="{Binding ManifestEditorType.CurrentValue, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static configuration:EditorType.Custom}}">
                                <Button DockPanel.Dock="Right" Content="…" Command="{Binding ManifestEditorPath.Browse}" Margin="4 0 0 0" />
                                <TextBox IsEnabled="{Binding ManifestEditorType.CurrentValue, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static configuration:EditorType.Custom}}" Text="{Binding ManifestEditorPath.CurrentValue, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" />
                            </DockPanel>

                            <Label Style="{StaticResource FormLabel}" Content="{localization:Loc Dialogs_Settings_Editors_AppInstallerFiles}" Margin="0 16 0 6" />
                            <TextBlock Text="{localization:Loc Dialogs_Settings_Editors_AppInstallerFiles_Hint}" Style="{StaticResource DataHeader}" Margin="0 0 0 6" />

                            <StackPanel>
                                <RadioButton 
                                    GroupName="rt4"
                                    Margin="0 0 0 8"
                                    IsChecked="{Binding AppinstallerEditorType.CurrentValue, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static configuration:EditorType.Default}}" 
                                    Content="{localization:Loc Dialogs_Settings_Editors_DefaultXml}" />
                                <RadioButton 
                                    GroupName="rt5"
                                    Margin="0 0 0 8"
                                    IsChecked="{Binding AppinstallerEditorType.CurrentValue, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static configuration:EditorType.Ask}}" 
                                    Content="{localization:Loc Dialogs_Settings_Editors_Ask}" />
                                <RadioButton 
                                    GroupName="rt6"
                                    Margin="0 0 0 8"
                                    IsChecked="{Binding AppinstallerEditorType.CurrentValue, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static configuration:EditorType.Custom}}" 
                                    Content="{localization:Loc Dialogs_Settings_Editors_CustomApp}" />
                            </StackPanel>

                            <DockPanel Margin="22 0 0 8" Visibility="{Binding AppinstallerEditorType.CurrentValue, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static configuration:EditorType.Custom}}">
                                <Button DockPanel.Dock="Right" Content="…" Command="{Binding AppinstallerEditorPath.Browse}" Margin="4 0 0 0" />
                                <TextBox IsEnabled="{Binding AppinstallerEditorType.CurrentValue, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static configuration:EditorType.Custom}}" Text="{Binding AppinstallerEditorPath.CurrentValue, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" />
                            </DockPanel>

                            <Label Style="{StaticResource FormLabel}" Content="{localization:Loc Dialogs_Settings_Editors_CompressedPackages}" Margin="0 16 0 6" />
                            <TextBlock Text="{localization:Loc Dialogs_Settings_Editors_CompressedPackages_Hint}" Style="{StaticResource DataHeader}" Margin="0 0 0 6" />

                            <StackPanel>
                                <RadioButton 
                                    GroupName="rt7"
                                    Margin="0 0 0 8"
                                    IsChecked="{Binding MsixEditorType.CurrentValue, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static configuration:EditorType.Default}}" 
                                    Content="{localization:Loc Dialogs_Settings_Editors_DefaultXml}" />
                                <RadioButton 
                                    GroupName="rt8"
                                    Margin="0 0 0 8"
                                    IsChecked="{Binding MsixEditorType.CurrentValue, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static configuration:EditorType.Ask}}" 
                                    Content="{localization:Loc Dialogs_Settings_Editors_Ask}" />
                                <RadioButton 
                                    GroupName="rt9"
                                    Margin="0 0 0 8"
                                    IsChecked="{Binding MsixEditorType.CurrentValue, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static configuration:EditorType.Custom}}" 
                                    Content="{localization:Loc Dialogs_Settings_Editors_CustomApp}" />
                            </StackPanel>

                            <DockPanel Margin="22 0 0 8" Visibility="{Binding MsixEditorType.CurrentValue, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static configuration:EditorType.Custom}}">
                                <Button DockPanel.Dock="Right" Content="…" Command="{Binding MsixEditorPath.Browse}" Margin="4 0 0 0" />
                                <TextBox IsEnabled="{Binding MsixEditorType.CurrentValue, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static configuration:EditorType.Custom}}" Text="{Binding MsixEditorPath.CurrentValue, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" />
                            </DockPanel>

                            <Label Style="{StaticResource FormLabel}" Content="{localization:Loc Dialogs_Settings_Editors_Psf}" Margin="0 16 0 6" />
                            <TextBlock Text="{localization:Loc Dialogs_Settings_Editors_Psf_Hint}" Style="{StaticResource DataHeader}" Margin="0 0 0 6" />

                            <StackPanel>
                                <RadioButton 
                                    GroupName="rt10"
                                    Margin="0 0 0 8"
                                    IsChecked="{Binding PsfEditorType.CurrentValue, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static configuration:EditorType.Default}}" 
                                    Content="{localization:Loc Dialogs_Settings_Editors_DefaultXml}" />
                                <RadioButton 
                                    GroupName="rt11"
                                    Margin="0 0 0 8"
                                    IsChecked="{Binding PsfEditorType.CurrentValue, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static configuration:EditorType.Ask}}" 
                                    Content="{localization:Loc Dialogs_Settings_Editors_Ask}" />
                                <RadioButton 
                                    GroupName="rt12"
                                    Margin="0 0 0 8"
                                    IsChecked="{Binding PsfEditorType.CurrentValue, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static configuration:EditorType.Custom}}" 
                                    Content="{localization:Loc Dialogs_Settings_Editors_CustomApp}" />
                            </StackPanel>

                            <DockPanel Margin="22 0 0 8" Visibility="{Binding PsfEditorType.CurrentValue, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static configuration:EditorType.Custom}}">
                                <Button DockPanel.Dock="Right" Content="…" Command="{Binding PsfEditorPath.Browse}" Margin="4 0 0 0" />
                                <TextBox IsEnabled="{Binding PsfEditorType.CurrentValue, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static configuration:EditorType.Custom}}" Text="{Binding PsfEditorPath.CurrentValue, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" />
                            </DockPanel>

                            <Label Style="{StaticResource FormLabel}" Content="{localization:Loc Dialogs_Settings_Editors_PowerShell}" Margin="0 16 0 6" />
                            <TextBlock Text="{localization:Loc Dialogs_Settings_Editors_PowerShell_Hint}" Style="{StaticResource DataHeader}" Margin="0 0 0 6" />

                            <StackPanel>
                                <RadioButton 
                                    GroupName="rt13"
                                    Margin="0 0 0 8"
                                    IsChecked="{Binding PowerShellEditorType.CurrentValue, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static configuration:EditorType.Default}}" 
                                    Content="{localization:Loc Dialogs_Settings_Editors_DefaultXml}" />
                                <RadioButton 
                                    GroupName="rt14"
                                    Margin="0 0 0 8"
                                    IsChecked="{Binding PowerShellEditorType.CurrentValue, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static configuration:EditorType.Ask}}" 
                                    Content="{localization:Loc Dialogs_Settings_Editors_Ask}" />
                                <RadioButton 
                                    GroupName="rt15"
                                    Margin="0 0 0 8"
                                    IsChecked="{Binding PowerShellEditorType.CurrentValue, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static configuration:EditorType.Custom}}" 
                                    Content="{localization:Loc Dialogs_Settings_Editors_CustomApp}" />
                            </StackPanel>

                            <DockPanel Margin="22 0 0 8" Visibility="{Binding PowerShellEditorType.CurrentValue, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static configuration:EditorType.Custom}}">
                                <Button DockPanel.Dock="Right" Content="…" Command="{Binding PowerShellEditorPath.Browse}" Margin="4 0 0 0" />
                                <TextBox IsEnabled="{Binding PowerShellEditorType.CurrentValue, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static configuration:EditorType.Custom}}" Text="{Binding PowerShellEditorPath.CurrentValue, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" />
                            </DockPanel>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="{localization:Loc Dialogs_Settings_Commands}" x:Name="TabCommands">
                    <ContentControl mvvm:RegionManager.RegionName="TabCommands" mvvm:RegionManager.RegionContext="{Binding Context}" />
                </TabItem>
                <TabItem Header="App attach" x:Name="TabAppAttach">
                    <ContentControl mvvm:RegionManager.RegionName="TabAppAttach" mvvm:RegionManager.RegionContext="{Binding Context}" />
                </TabItem>
                <TabItem Header="{localization:Loc Dialogs_Settings_Other}">
                    <b:Interaction.Behaviors>
                        <validation:ValidationBehavior ValidatedChangeable="{Binding TabOther}" />
                    </b:Interaction.Behaviors>
                    <StackPanel>
                        <Label Content="{localization:Loc Dialogs_Settings_Other_Certificates}" Style="{StaticResource FormLabel}" />

                        <TextBlock Text="{localization:Loc Dialogs_Settings_Other_Certificates_DefaultFolder}" Style="{StaticResource DataHeader}" Margin="0 0 0 6" />
                        <DockPanel Margin="0 0 0 16">
                            <Button DockPanel.Dock="Right" Content="…" Command="{Binding CertificateOutputPath.Browse}" Margin="4 0 0 0" />
                            <TextBox Text="{Binding CertificateOutputPath.CurrentValue, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" />
                        </DockPanel>

                        <Label Content="{localization:Loc Dialogs_Settings_Other_Packing}" Style="{StaticResource FormLabel}" />
                        <CheckBox IsChecked="{Binding PackerSignByDefault.CurrentValue}" Margin="0 0 0 16">
                            <TextBlock Text="{localization:Loc Dialogs_Settings_Other_Packing_Sign}" TextWrapping="Wrap" />
                        </CheckBox>

                        <Label Content="{localization:Loc Dialogs_Settings_Other_AppInstaller}" Style="{StaticResource FormLabel}" />
                        <TextBlock Text="{localization:Loc Dialogs_Settings_Other_Url}" Style="{StaticResource DataHeader}" Margin="0 0 0 6" />
                        <TextBox Text="{Binding DefaultRemoteLocationPackages.CurrentValue, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 16" />

                        <TextBlock Text="{localization:Loc Dialogs_Settings_Other_Url_AppInstaller}" Style="{StaticResource DataHeader}" Margin="0 0 0 6" />
                        <TextBox Text="{Binding DefaultRemoteLocationAppInstaller.CurrentValue, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 16" />

                        <Label Content="{localization:Loc Dialogs_Settings_Other_Logs}" Style="{StaticResource FormLabel}" />
                        <CheckBox 
                            Content="{localization:Loc Dialogs_Settings_Other_Logs_Verbose}"
                            IsChecked="{Binding VerboseLogging.CurrentValue}" 
                            Margin="0 0 0 6" />

                        <StackPanel Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center">
                                <Hyperlink Click="OpenLogsClicked">
                                    <Run Text="{localization:Loc Dialogs_Settings_Other_Logs_Open}" />
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Visibility="Collapsed" Foreground="#888" x:Name="LogsLoading" Text="{localization:Loc Loading_PleaseWait}" Margin="6 0 0 0" VerticalAlignment="Center" />
                        </StackPanel>

                    </StackPanel>
                </TabItem>
            </TabControl>
        </Border>
    </DockPanel>
</UserControl>
