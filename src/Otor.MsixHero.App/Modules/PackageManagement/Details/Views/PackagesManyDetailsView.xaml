<UserControl x:Class="Otor.MsixHero.App.Modules.PackageManagement.Details.Views.PackagesManyDetailsView"
             x:Name="Root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Otor.MsixHero.App.Controls"
             xmlns:commands="clr-namespace:Otor.MsixHero.App.Hero.Commands"
             xmlns:localization="clr-namespace:Otor.MsixHero.App.Localization"
             xmlns:viewModels="clr-namespace:Otor.MsixHero.App.Modules.PackageManagement.Details.ViewModels"
             xmlns:packaging="clr-namespace:Otor.MsixHero.Appx.Packaging;assembly=Otor.MsixHero.Appx"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance viewModels:PackageManyDetailsViewModel}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/msixhero;component/Themes/Colors.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel>
        <Border DockPanel.Dock="Top" Background="{StaticResource MsixHero.Brushes.Background}" BorderBrush="#E0E0E0" BorderThickness="0 0 0 1">
            <controls:ButtonRowPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                <Button 
                    Command="{x:Static commands:MsixHeroRoutedUICommands.RemovePackage}"
                    Style="{StaticResource ActionButton}">
                    <controls:LabelWithIcon 
                        IsCollapsible="True"
                        Style="{StaticResource ActionLabelWithIcon}"
                        Icon16x16="M 2.5 2 C 1.675781 2 1 2.675781 1 3.5 L 1 12.5 C 1 13.324219 1.675781 14 2.5 14 L 8 14 L 8 13 L 2.5 13 C 2.21875 13 2 12.78125 2 12.5 L 2 5 L 13 5 L 13 8 L 14 8 L 14 3.5 C 14 2.675781 13.324219 2 12.5 2 Z M 2.5 3 L 12.5 3 C 12.78125 3 13 3.21875 13 3.5 L 13 4 L 2 4 L 2 3.5 C 2 3.21875 2.21875 3 2.5 3 Z M 9.851563 9.148438 L 9.148438 9.851563 L 11.792969 12.5 L 9.148438 15.144531 L 9.851563 15.855469 L 12.5 13.207031 L 15.144531 15.855469 L 15.855469 15.144531 L 13.207031 12.5 L 15.855469 9.851563 L 15.144531 9.148438 L 12.5 11.792969 Z"
                        Content="{localization:Loc PackageExpert_App_Uninstall}" />
                </Button>

                <Button Command="{x:Static commands:MsixHeroRoutedUICommands.CheckUpdates}" Style="{StaticResource ActionButton}">
                    <controls:LabelWithIcon 
                        IsCollapsible="True"
                        Style="{StaticResource ActionLabelWithIcon}"
                        Icon16x16="M 7.5 1.035156 C 3.917969 1.035156 1 3.941406 1 7.515625 L 1 8 L 2 8 L 2 7.515625 C 2 4.484375 4.457031 2.035156 7.5 2.035156 C 9.132813 2.035156 10.589844 2.75 11.59375 3.875 L 10.464844 5 L 14 5 L 14 1.476563 L 12.300781 3.167969 C 11.113281 1.863281 9.40625 1.035156 7.5 1.035156 Z M 13 7 L 13 7.5 C 13 10.542969 10.542969 13 7.5 13 C 5.859375 13 4.402344 12.277344 3.394531 11.140625 L 4.535156 10 L 1 10 L 1 13.535156 L 2.6875 11.847656 C 3.878906 13.164063 5.589844 14 7.5 14 C 11.085938 14 14 11.085938 14 7.5 L 14 7 Z"
                        Content="{localization:Loc PackageExpert_App_CheckUpdates}" />
                </Button>
            </controls:ButtonRowPanel>
        </Border>

        <StackPanel VerticalAlignment="Center">
            <Image Source="/Resources/Images/msix-hero-32.png" DockPanel.Dock="Top" Stretch="None" />
            <Label Margin="0 7 0 0" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{localization:Loc Packages_Sidebar_MultipleItems}" Style="{StaticResource FormLabelThin}" />
            <TextBlock Foreground="#999" VerticalAlignment="Center" TextAlignment="Center" HorizontalAlignment="Center" Text="{localization:Loc Packages_Sidebar_MultipleItems_Hint}" />
            <ItemsControl Margin="16 8 16 16" ItemsSource="{Binding Apps}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type packaging:PackageEntry}">
                        <TextBlock Margin="0 2">
                            <Hyperlink Command="{Binding Path=DataContext.Select, ElementName=Root}" CommandParameter="{Binding PackageFullName}">
                                <Run Text="{Binding DisplayName, Mode=OneWay}" />
                                <Run Text="{Binding Version, Mode=OneWay}" Foreground="Gray" />
                            </Hyperlink>
                        </TextBlock>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </DockPanel>
</UserControl>
